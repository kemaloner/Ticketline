<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="108.0" prefWidth="174.0" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.tuwien.inso.sepm.ticketline.client.gui.news.NewsElementController">
    <stylesheets>
        <URL value="@/css/newsElement.css" />
    </stylesheets>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <Label fx:id="lblDate" styleClass="newsPublishDate" text="&lt;DD.MM.YYYY | hh:mm&gt;" />
    <Label fx:id="lblTitle" styleClass="newsTitle" text="&lt;NewsTitle&gt;" />
    <Label fx:id="lblText" styleClass="newsText" text="&lt;NewsText&gt;" wrapText="true" />
   <Button fx:id="btNewsDetails" mnemonicParsing="false" onAction="#onViewDetailClicked" styleClass="darkyellow" stylesheets="@../../css/button.css" text="View Detail" />
</VBox>
